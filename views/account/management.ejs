<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Account Management</h1>
<% } %>

<%- messages() %>

<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
  <h2>Welcome, <%= locals.accountData.account_firstname %>!</h2>
<% } %>

<div class="account-actions">
  <p>You are logged in as <strong><%= locals.accountData.account_firstname %> <%= locals.accountData.account_lastname %></strong>.</p>
  
  <p><a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update account information">Update Account Information</a></p>

  <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p>Manage the inventory using the link below:</p>
    <p><a href="/inv/" title="Manage inventory items and classifications">Manage Inventory</a></p>
  <% } %>
</div>